<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="375.0" maxWidth="935.0" prefHeight="475.0" prefWidth="935.0" style="-fx-background-color: #E5E5E5" stylesheets="@main-stylesheet.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lukehuisman684651endassignment.CRUDMemberViewController">
    <children>
        <Label alignment="CENTER" text="Members" textFill="#6f6f6f">
            <font>
                <Font size="32.0" />
            </font>
            <GridPane.margin>
                <Insets left="30.0" top="10.0" />
            </GridPane.margin>
        </Label>
        <Button onMouseClicked="#addMemberButtonClicked" prefWidth="100.0" text="Add member" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="30.0" />
            </GridPane.margin>
        </Button>
        <Button onMouseClicked="#cancelButtonClicked" prefWidth="100.0" text="Cancel" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="150.0" />
            </GridPane.margin>
        </Button>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="30.0" right="30.0" />
            </GridPane.margin>
            <children>
                <TextField fx:id="firstNameTextField" layoutX="30.0" layoutY="40.0" prefHeight="30.0" prefWidth="300.0" promptText="First name" />
                <TextField fx:id="lastNameTextField" layoutX="30.0" layoutY="90.0" prefHeight="30.0" prefWidth="300.0" promptText="Last name" />
                <DatePicker fx:id="birthDatePicker" layoutX="350.0" layoutY="40.0" prefHeight="30.0" prefWidth="300.0" promptText="Birth date" />
                <Label fx:id="errorLabel" layoutX="350.0" layoutY="93.0" prefHeight="25.0" prefWidth="0.0" textFill="RED">
                    <font>
                        <Font size="216.0" />
                    </font>
                </Label>
            <PasswordField fx:id="passwordField" layoutX="30.0" layoutY="160.0" prefHeight="30.0" prefWidth="300.0" promptText="New password" />
            <ChoiceBox fx:id="roleChoiceBox" layoutX="670.0" layoutY="40.0" prefHeight="30.0" prefWidth="150.0" />
            <PasswordField fx:id="confirmPasswordField" layoutX="30.0" layoutY="210.0" prefHeight="30.0" prefWidth="300.0" promptText="Confirm password" />
            <Label layoutX="30.0" layoutY="132.0" text="If passwords are not filled in or do not match! Old password will be used." />
            <Label layoutX="30.0" layoutY="14.0" text="New member password: firstletter + Lastname + birthyear + ! example: JDoe1954!" />
            </children>
        </Pane>
    </children>
    <rowConstraints>
        <RowConstraints maxHeight="165.0" minHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="255.0" minHeight="108.0" prefHeight="243.0" vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
</GridPane>
